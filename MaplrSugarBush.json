{
  "openapi": "3.0.1",
  "info": {
    "title": "Maplr Sugar bush ",
    "description": "maple syrup Management service",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/cart": {
      "get": {
        "tags": [
          "cart-controller"
        ],
        "operationId": "getCart",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CartLineDto"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "cart-controller"
        ],
        "operationId": "addToCart",
        "parameters": [
          {
            "name": "productId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          }
        }
      },
      "delete": {
        "tags": [
          "cart-controller"
        ],
        "operationId": "removeFromCart",
        "parameters": [
          {
            "name": "productId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          }
        }
      },
      "patch": {
        "tags": [
          "cart-controller"
        ],
        "operationId": "changeQty",
        "parameters": [
          {
            "name": "productId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "newQty",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted"
          }
        }
      }
    },
    "/order": {
      "post": {
        "tags": [
          "order-controller"
        ],
        "operationId": "placeOrder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OrderLineDto"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderValidationResponseDto"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "products-controller"
        ],
        "operationId": "getCatalogue",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "AMBER",
                "DARK",
                "CLEAR"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CatalogueItemDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "tags": [
          "products-controller"
        ],
        "operationId": "getProductInfo",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/MapleSyrupDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderLineDto": {
        "required": [
          "productId",
          "qty"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "qty": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "OrderValidationResponseDto": {
        "required": [
          "isOrderValid"
        ],
        "type": "object",
        "properties": {
          "isOrderValid": {
            "type": "boolean"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "CatalogueItemDto": {
        "required": [
          "id",
          "image",
          "maxQty",
          "name",
          "price",
          "type"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "maxQty": {
            "type": "integer",
            "format": "int32"
          },
          "type": {
            "type": "string",
            "enum": [
              "AMBER",
              "DARK",
              "CLEAR"
            ]
          }
        }
      },
      "MapleSyrupDto": {
        "required": [
          "description",
          "id",
          "image",
          "name",
          "price",
          "stock",
          "type"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          },
          "type": {
            "type": "string",
            "enum": [
              "AMBER",
              "DARK",
              "CLEAR"
            ]
          }
        }
      },
      "CartLineDto": {
        "required": [
          "image",
          "name",
          "price",
          "productId",
          "qty"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "qty": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    },
    "securitySchemes": {
      "basic auth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
